<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IntroducaoComputacao">

  <include
      android:id="@+id/include3"
      layout="@layout/toolbar" />


  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="24dp"
      android:fontFamily="@font/nunito_sans_bold"
      android:text="Introdução à programação"
      android:textColor="#0D1333"
      android:textSize="28sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/include3" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:fontFamily="@font/nunito_sans_bold"
      android:text="Veja neste texto alguns conceitos básicos sobre programação"
      android:textColor="#61688b"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <View
      android:id="@+id/rectangle_part1"
      android:layout_width="246dp"
      android:layout_height="77dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="40dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito_sans_semibold"
      android:text="Fase 1 (Variáveis)"
      android:textColor="#0D1333"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part1"
      app:layout_constraintStart_toEndOf="@+id/image_View_doc1"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part1" />

  <ImageView

      android:id="@+id/image_View_doc1"
      android:layout_width="82dp"
      android:layout_height="63dp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part1"
      app:layout_constraintStart_toStartOf="@+id/rectangle_part1"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part1"
      app:srcCompat="@drawable/ic_baseline_text_snippet_24" />


  <View
      android:id="@+id/rectangle_part2"
      android:layout_width="246dp"
      android:layout_height="77dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="24dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rectangle_part1" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito_sans_semibold"
      android:text="Fase 2 (Funções)"
      android:textColor="#0D1333"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part2"
      app:layout_constraintStart_toEndOf="@+id/image_View_doc2"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part2" />

  <ImageView

      android:id="@+id/image_View_doc2"
      android:layout_width="82dp"
      android:layout_height="63dp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part2"
      app:layout_constraintStart_toStartOf="@+id/rectangle_part2"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part2"
      app:srcCompat="@drawable/ic_baseline_text_snippet_24" />


  <View
      android:id="@+id/rectangle_part3"
      android:layout_width="246dp"
      android:layout_height="77dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="28dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rectangle_part2" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito_sans_semibold"
      android:text="Fase 3 (Passagem de Parâmetros)"
      android:textColor="#0D1333"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part3"
      app:layout_constraintStart_toEndOf="@+id/image_View_doc3"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part3" />

  <ImageView

      android:id="@+id/image_View_doc3"
      android:layout_width="82dp"
      android:layout_height="63dp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part3"
      app:layout_constraintStart_toStartOf="@+id/rectangle_part3"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part3"
      app:srcCompat="@drawable/ic_baseline_text_snippet_24" />


  <View
      android:id="@+id/rectangle_part4"
      android:layout_width="246dp"
      android:layout_height="77dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="4dp"
      android:layout_marginTop="32dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/rectangle_part3" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/nunito_sans_semibold"
      android:text="Fase 4 (Linguagens e Tradutores)"
      android:textColor="#0D1333"
      android:textSize="28sp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part4"
      app:layout_constraintStart_toEndOf="@+id/image_View_doc4"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part4"/>

  <ImageView
      android:id="@+id/image_View_doc4"
      android:layout_width="82dp"
      android:layout_height="63dp"
      app:layout_constraintBottom_toBottomOf="@+id/rectangle_part4"
      app:layout_constraintStart_toStartOf="@+id/rectangle_part4"
      app:layout_constraintTop_toTopOf="@+id/rectangle_part4"
      app:srcCompat="@drawable/ic_baseline_text_snippet_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
